{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "allowJs": true
        }
      }
    ]
  },
  "transformIgnorePatterns": ["node_modules/(?!.*@faker-js)"],
  "moduleNameMapper": {
    "^@app/shared(|/.*)$": "<rootDir>/../libs/shared/src/$1"
  }
}
